{
    "plot_manager": "plotly",
    "title": "California Fires",
    "brief_desc": "Map plotting example using up-to-date California fire data uploaded using Github Continuous Integration. Plotly documentation for Mapbox plots here: https://plotly.com/javascript/mapbox-layers/",
    "data_sources": {
        "main_data_source": {
            "data_source_type": "california_fires"
        }
    },
    "plot_specific_info": {
        "data": [
            {
                "type": "scattermapbox",
                "lat": "california_fires:latitude",
                "lon": "california_fires:longitude",
                "mode": "markers",
                "marker": {
                    "size": "california_fires:acresburned",
                    "line": {
                        "color": "black",
                        "width": 1
                    },
                    "color": "red",
                    "sizeref": 4000,
                    "sizemode": "area",
                    "sizemin": 3
                }
            }
        ],
        "layout": {
            "height": 800,
            "width": 600,
            "mapbox": {
                "style": "white-bg",
                "layers": [
                    {
                        "below": "traces",
                        "sourcetype": "raster",
                        "sourceattribution": "United States Geological Survey",
                        "source": [
                            "https://basemap.nationalmap.gov/arcgis/rest/services/USGSImageryOnly/MapServer/tile/{z}/{y}/{x}"
                        ]

                    }
                ],
                 "center": {
                            "lat": 38,
                            "lon": -120
                        },
                "zoom": 5
            }
        }
    },
    "visualization_options": {
        "hover_data": {
            "column": [
                "california_fires:name",
                "california_fires:acresburned",
                "california_fires:started"
            ]
        }
    },
    "selectable_data_dict": {
        "numerical_filter": [
            {
                "column": "california_fires:acresburned"
            },
            {
                "column": "california_fires:personnelinvolved"
            }

        ]
    }
}