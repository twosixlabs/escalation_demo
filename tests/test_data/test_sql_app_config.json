              ],
              "layout": {
                "xaxis": {
                  "title": "body mass"
                },
                "yaxis": {
                  "title": "count"
                }
              }
            }
          },
          "selectable_data_list": [
            {
              "type": "axis",
              "columns": "x",
              "options": {
                "entries": [
                  "culmen_length_mm",
