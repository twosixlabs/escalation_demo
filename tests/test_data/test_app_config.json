              "column": [
                "island"
              ],
              "options": {
                "styles": {
                  "Torgersen": {
                    "marker": {
                      "color": "green"
                    }
                  },
                  "Biscoe": {
                    "marker": {
                      "color": "blue"
                    }
                  },
                  "Dream": {
                    "marker": {
                      "color": "red"
                    }
                  }
                }
              }
            }
          ],
          "selectable_data_list": [
            {
              "type": "select",
              "column": "sex",
              "options": {
                "multiple": false
              }
            },
            {
              "type": "select",
              "column": "island",
              "options": {
                "multiple": true
              }
            },
            {
              "type": "numerical_filter",
              "column": "culmen_length_mm"
            }
          ]
        },
        "graphic_1": {
          "plot_manager": "plotly",
          "data_path": "tests/test_data/penguins_size/",
