          "brief_desc": "",
          "data": {
            "points_0": {
              "x": "body_mass_g"
            }
          },

          "plot_specific_info": {
            "data": [
              {
                "type": "histogram"
              }
            ],
            "layout": {
              "xaxis": {
                "title": "body mass"
              },
              "yaxis": {
                "title": "count"
              }
            }
          },
          "selectable_data_list": [
            {
              "type": "axis",
              "column": "x",
              "options": {
                "entries": [
                  "culmen_length_mm",
                  "flipper_length_mm",
                  "body_mass_g",
                  "culmen_depth_mm"
                ]
              }
            }
          ]
        }
