          "brief_desc": "This plot looks at the relationship between...",
          "data": {
            "points_0": {
              "x": "body_mass_g",
              "y": "flipper_length_mm"
            }
          },

          "plot_specific_info": {
            "data": [
              {
                "type": "scatter",
                "mode": "markers"
              }
            ]
          },

          "visualization_options": [
            {
              "type": "hover_data",
              "column": [
                "sex",
                "culmen_length_mm"
              ]
            },
            {
